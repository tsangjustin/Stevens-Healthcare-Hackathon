<section class="marginTop">
    <h1>Search Forums</h1>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-1 control-label" for="searchBox"><i class="fa fa-search" aria-hidden="true"></i></label>
            <div class="col-sm-10">
                <input class="form-control" id="searchBox" type="text" placeholder="Search by title, tag, or brand" />
            </div>
        </div>
        {{#if price}}
            <div class="form-group">
                <label class="col-sm-1 control-label">Prices</label>
                <div class="col-sm-10 inputitem" id="prices">
                    {{#each price}}
                        <input type="checkbox" name="prices[]" id="price-{{ removeSpace @key }}" value="{{ @key }}" />
                        <label for="price-{{ removeSpace @key }}">{{ @key }}</label><br />
                    {{/each}}
                </div>
            </div>
        {{/if}}
        {{#if labels}}
            <div class="form-group">
                <p class="col-sm-1 control-label">Labels</p>
                <div class="col-sm-10 inputitem" id="labels">
                    {{#each labels}}
                        <input type="checkbox" name="labels[]" id="labels-{{ removeSpace @key }}" value="{{ @key }}" />
                        <label for="labels-{{ removeSpace @key }}">{{ @key }}</label><br />
                    {{/each}}
                </div>
            </div>
        {{/if}}
        <div class="form-group">
            <div class="col-sm-offset-1 col-sm-10">
                <button class="btn btn-default" id="searhButton" type="submit">Search</button>
            </div>
        </div>
    </form>
    <ol id="community-forums" class="list-group">
    {{#each forums}}
        <li class="list-group-item">
            <p>{{ this.createdOn }}</p>
            <img src={{this.avatar}} class="avatar" alt="Forum creator" />
            <span class="badge">{{ this.comments.length }}</span>
            <a href="forums/{{this._id}}">{{ this.title }}</a>
        </li>
    {{/each}}
    </ol>
</section>
<script src="/public/js/communityForums.js"></script>
